<image src="/images/return.png" style="height: 40rpx;width:40rpx;position: absolute;top: 90rpx;left: 40rpx;" bindtap="back"></image>

<view style="width: 100%;height: 600rpx;display:flex;flex-direction: column;align-items: center;">
<view style="font-size: 40rpx;font-weight: 700;margin-top: 210rpx">忘记密码</view>

<view class="cu-form-group" style="border-bottom:1rpx solid rgb(240, 238, 238);margin-top: 50rpx;width: 550rpx;" wx:if="{{role==='业主'}}">
		<view style="font-size: 38rpx;">手机号码</view>
		<input type="number" disabled="{{telephoneEdit}}" value="{{forgetPassword.telephone}}" maxlength="11" bindinput="setTelephone" placeholder="请输入手机号" style="font-size: 38rpx;"/>
		
	</view>
	<view class="cu-form-group" style="border-bottom:1rpx solid rgb(240, 238, 238);margin-top: 50rpx;width: 550rpx;" wx:if="{{role==='员工'}}">
		<view style="font-size: 38rpx;">工号</view>
		<input disabled="{{telephoneEdit}}" value="{{forgetPassword.telephone}}" bindinput="setTelephone" placeholder="请输入工号" style="font-size: 38rpx;"/>
		
	</view>
	<view class="cu-form-group" style="border-bottom:1rpx solid rgb(240, 238, 238);width: 550rpx;">
		<view style="font-size: 38rpx;">验证码</view>
		<input placeholder="" style="font-size: 38rpx;" bindinput="getCode" value="{{forgetPassword.inputCode}}"></input>
		<button wx:if="{{Num==60 || Num==-1}}" bindtap="sendCode" class="cu-btn bg-gray shadow">获取验证码</button>
        <button wx:else disabled class="cu-btn bg-green shadow">{{Num}}秒后重新获取</button>
		
	</view>
	<view style="margin-top: 40rpx;">
          <radio-group style="font-size: 25rpx;" bindchange="bindchange">
          业主<radio class="radio" value="业主" checked="{{role==='业主'}}" ></radio>
          员工<radio class="radio" value="员工" checked="{{role==='员工'}}"></radio>
          
        </radio-group>
        </view>
</view>

<view style="width: 100%;margin-top: 50rpx;">
	<button class="cu-btn bg-green margin-tb-sm lg" style="width:90%;margin:auto;display: block;line-height: 90rpx;" bind:tap="confirm">确认</button>
</view>
