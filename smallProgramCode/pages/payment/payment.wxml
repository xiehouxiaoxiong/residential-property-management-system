<navigation-bar title="生活缴费" back="{{false}}" color="black" background="#59c0df"></navigation-bar>
<view style="height:50rpx;width:50rpx;margin-top:-72rpx;" bindtap="back">
	<image src="/images/return.png" style="height:50rpx;width:50rpx;margin-left: 20rpx;"></image>
</view>
<view style="width: 100%;height: 230rpx;display: flex;justify-content: center;margin-top:50rpx">

  <view style="width: 90%;height: 211rpx;background: linear-gradient(135deg,orange,white 100%);border-radius: 15rpx;display: flex;justify-content: center;align-items: center;">
     <van-row style="width: 80%;padding: 50rpx;">
	   <van-col span="8"><view style="display: flex;flex-direction: column;">
		 <view style="font-size: 53rpx;margin:0 auto">{{payInfo.money||0}}<text style="font-size: 20rpx;">元</text></view>
	     <view style="margin:0 auto;font-size: 30rpx;">余额</view>
	   </view></van-col>
	   <van-col span="8"><view style="display: flex;flex-direction: column;">
		 <view style="font-size: 53rpx;margin:0 auto">{{-payInfo.parkingArrearage||0}}<text style="font-size: 20rpx;">元</text></view>
	     <view style="margin:0 auto;font-size: 30rpx;">停车费</view>
	   </view></van-col>
	   <van-col span="8"><view style="display: flex;flex-direction: column;">
		 <view style="font-size: 53rpx;margin:0 auto">{{-payInfo.wuyeArrearage||0}}<text style="font-size: 20rpx;">元</text></view>
	     <view style="margin:0 auto;font-size: 30rpx;">物业费</view>
	   </view></van-col>
	 </van-row>
  </view>
</view>
<view style="width: 100%;height:111rpx;display: flex;justify-content: center;margin-top:0rpx">

<view style="width: 90%;height: 111rpx;background-color:rgb(195, 233, 247,0.3);border-radius: 15rpx;display: flex;justify-content: center;align-items: center;">
   <van-row style="width: 80%;padding: 50rpx">
	 <van-col span="18" style="font-size: 24rpx;"><view style="height:70rpx;line-height: 70rpx;">
		{{content}}
	 </view>
	 
	 </van-col>
	 <van-col span="6">
	    
				<button class="cu-btn round line-blue shadow" bind:tap="goTopayCenter">去充值</button>
			
	 </van-col>
   </van-row>
   
</view>

</view>
<view style="width: 100%;height:111rpx;display: flex;justify-content: center;margin-top:-10rpx">
	<view style="width: 90%;height: 111rpx;background-color:rgba(233, 245, 250, 0.3);border-radius: 0 0 15rpx 15rpx;display: flex;justify-content: center;align-items: center;color: rgb(201, 195, 195);">物业费计算公式=物业费单价*房屋建筑面积*月数（物业费单价为1.4元/月/平方米</view>
</view>

<view style="width: 100%;height:111rpx;display: flex;justify-content: center;margin-top:20rpx">
<view style="width: 90%;height: 71rpx;background-color:rgba(243, 245, 118, 0.3);border-radius: 15rpx;display: flex;justify-content: center;align-items: center;" bind:tap="goToPayRecord">
  
	    
	<text class="cuIcon-unfold lg text-gray"></text>		点击查看账单记录
	
</view>
</view>