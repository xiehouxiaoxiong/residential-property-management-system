<navigation-bar title="工单管理" back="{{false}}" color="black" background="#59c0df"></navigation-bar> 
<view style="height:50rpx;width:50rpx;margin-top:-72rpx;" bindtap="back">
	<image src="/images/return.png" style="height:50rpx;width:50rpx;margin-left: 20rpx;"></image>
</view>
<scroll-view scroll-x class="bg-white nav" scroll-with-animation scroll-left="{{scrollLeft}}" style="margin-top:28rpx">
  <view class="cu-item {{index==TabCur?'text-green cur':''}}" wx:for="{{tabList}}" wx:key bindtap="tabSelect" data-id="{{index}}">
    {{tabList[index]}}
  </view>
  
  
</scroll-view>
<scroll-view scroll-y="true" style="height: 1000rpx;width: 100%">
  <view style="display: flex;justify-content: center;margin-top: 20rpx;" wx:for="{{workOrderList}}">
	<repairBlock repairItem="{{item}}" bind:tap="goToDetail" data-id="{{item.id}}" tabCur="{{TabCur}}"></repairBlock>
  </view>
</scroll-view>