<view class="logs_main forget_pwd_main">
  <view class="bg"></view>
  <image src="/images/return.png" style="height: 40rpx;width:40rpx;position: absolute;top: 80rpx;left: 40rpx;" bindtap="back"></image>
  <view style="padding: 40rpx;">
    <view class="pub_title" style="margin-top: 120rpx;"></view>
    <view class="cu-bar">
      <view class="action sub-title">
        <text class="text-xl text-bold text-blue" style="font-size:26px">注册账号</text>
        <text class="text-ABC text-blue">register</text>
      </view>
    </view>
    <view class="wrap">
      <view class="ipt_box">
        <input type="number" disabled="{{telephoneEdit}}" value="{{telephone}}" maxlength="11" bindinput="setTelephone" class="ipt" placeholder="请输入手机号" />
        <button wx:if="{{Num==60 || Num==-1}}" bindtap="sendCode" class="cu-btn bg-gray shadow">获取验证码</button>
        <button wx:else disabled class="cu-btn bg-green shadow">{{Num}}秒后重新获取</button>
      </view>
      <view class="ipt_box">
        <input maxlength="5" value="{{verificationCode}}" bindinput="setCode" class="ipt" placeholder="请输入验证码" />
      </view>

      <view class="ipt_box">
        <block wx:if="{{pwdType == 'password'}}">
          <input type="password" class="ipt" value="{{password}}" bindinput="setPassword" placeholder="请输入密码" style="width:180rpx;" />
        </block>
        <block wx:else>
          <input type="text" class="ipt" value="{{password}}" bindinput="setPassword" placeholder="请输入密码" style="width:180rpx;" />
        </block>
        <view bindtap="pwdTypeEvent">
          <block wx:if="{{pwdType == 'password'}}">
            <image src="../../images/log_i.png" style="width:40rpx; height: 35rpx;"></image>
          </block>
          <block wx:else>
            <image src="../../images/eye.png" style="width:40rpx; height: 35rpx;"></image>
          </block>
        </view>
      </view>
      <view class="ipt_box">
        <block wx:if="{{pwdType1 == 'password'}}">
          <input type="password" class="ipt" value="{{verificationPassword}}" bindblur="vertyPassword" bindinput="setPassword1" placeholder="请再次输入密码" style="width:180rpx;" />
        </block>
        <block wx:else>
          <input type="text" class="ipt" value="{{verificationPassword}}" bindblur="vertyPassword" bindinput="setPassword1" placeholder="请再次输入密码" style="width:180rpx;" />
        </block>
        <view bindtap="pwdTypeEvent1">
          <block wx:if="{{pwdType1 == 'password'}}">
            <image src="../../images/log_i.png" style="width:40rpx; height: 35rpx;"></image>
          </block>
          <block wx:else>
            <image src="../../images/eye.png" style="width:40rpx; height: 35rpx;"></image>
          </block>
        </view>
      </view>
      <view class="wrap_b">
        （建议密码采用8-20位的数学、字母组合)
      </view>
    </view>
    <button open-type="getUserInfo" class="tolog" bindtap="register">
      <view> 注册</view>
    </button>
  </view>
</view>