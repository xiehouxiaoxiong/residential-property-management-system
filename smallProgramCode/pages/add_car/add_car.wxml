<view class="top">
  <view class="nav_top">
    <view class="backText"><text class="iconfont icon-arrow-left" bindtap="back"></text></view>
    <view class="content">添加爱车</view>
    <image src="/images/return.png" style="width: 50rpx;height: 50rpx;position: absolutes;top: 75rpx;" bindtap="back"></image>
  </view>
</view>

<view class="cu-form-group" style="margin-top: 30rpx;">
  <view class="title">爱车品牌</view>
  <picker range="{{cars}}" bindchange="CarsChangeBrand">
    <view class="picker">
      {{vehicleinfo.carBrand}}
    </view>
  </picker>
</view>
<view class="cu-form-group" style="position: relative;">
  <view class="title">车牌号</view>
  <input bindinput="getCarNo" style="position:absolute;left: 590rpx;" placeholder="请输入车牌号" value="{{vehicleinfo.licenseNumber}}">
  </input>
</view>
<view class="cu-form-group" style="position: relative;">
  <view class="title">车辆颜色</view>
  <input bindinput="getCarColor" style="position:absolute;left: 590rpx;" placeholder="请输入车辆颜色" value="{{vehicleinfo.carColor}}">
  </input>
</view>
<view class="cu-form-group" style="position: relative;">
  <view class="title">车辆类型</view>
  <picker range="{{carTypeList}}" bindchange="CarsChangeType">
    <view class="picker">
      {{vehicleinfo.carType}}
    </view>
  </picker>
</view>
<view style="background-color: rgb(240, 243, 243);height: 1rpx;width: 100%;"></view>

<view class="cu-bar bg-white">
  <view class="action">
    车辆图片
  </view>
</view>
<view class="cu-form-group">
  <view class="grid col-4 grid-square flex-sub">
    <view wx:if="{{vehicleinfo.carPicture!=''}}" class="bg-img" bindtap="ViewImageCp" data-url="{{vehicleinfo.carPicture}}">
      <image src='{{vehicleinfo.carPicture}}' mode='aspectFill'></image>
      <view class="cu-tag bg-red" catchtap="DelImgCp" data-index="{{index}}">
        <text class="cuIcon-close"></text>
      </view>
    </view>
    <view wx:if="{{vehicleinfo.carPicture==''}}" class="solids" bindtap="ChooseImageCp">
      <text class="cuIcon-cameraadd"></text>
    </view>
  </view>
</view>
<view class="cu-bar bg-white">
  <view class="action">
    行驶证
  </view>
</view>
<view class="cu-form-group">
  <view class="grid col-4 grid-square flex-sub">
    <view wx:if="{{vehicleinfo.drivingLicense!=''}}" class="bg-img" bindtap="ViewImageDl" data-url="{{vehicleinfo.drivingLicense}}">
      <image src='{{vehicleinfo.drivingLicense}}' mode='aspectFill'></image>
      <view class="cu-tag bg-red" catchtap="DelImgDl" data-index="{{index}}">
        <text class="cuIcon-close"></text>
      </view>
    </view>
    <view wx:if="{{vehicleinfo.drivingLicense==''}}" class="solids" bindtap="ChooseImageDl">
      <text class="cuIcon-cameraadd"></text>
    </view>
  </view>

</view>
<view class="padding flex flex-direction" style="margin-top: 20rpx;" bindtap="confirm">
  <button class="cu-btn bg-green lg">保存</button>
</view>
<view style="width: 100%;height: 60rpx;"></view>