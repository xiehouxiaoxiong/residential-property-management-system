<navigation-bar title="报修" back="{{false}}" color="black" background="#59c0df"></navigation-bar>
<view style="height:50rpx;width:50rpx;margin-top:-72rpx;" bindtap="back">
	<image src="/images/return.png" style="height:50rpx;width:50rpx;margin-left: 20rpx;"></image>
</view>
<form>
	<view class="cu-form-group margin-top">
		<view class="title" style="font-size: 33rpx;font-weight: 700;">报修地点</view>
		<input placeholder="请选择报修地址" style="font-size: 33rpx;" bind:tap="onClick" value="{{repairInfo.repairAddress}}" disabled></input>


	</view>
	<view class="cu-form-group">
		<view class="title" style="font-size: 33rpx;font-weight: 700;">预约维修时间</view>
		<input placeholder="请选择预约时间段" style="font-size: 33rpx;" value="{{repairInfo.repairDate}}" bind:tap="selectDate" disabled></input>



	</view>

	<view class="cu-form-group">
		<view class="title" style="font-size: 33rpx;font-weight: 700;">报修项目</view>
		<input placeholder="请选择报修项目" style="font-size: 33rpx;" value="{{repairInfo.repairEvent}}" bind:tap="onClickEvent" disabled></input>
	</view>
	<view class="cu-form-group">
		<view class="title" style="font-size: 33rpx;font-weight: 700;">报修详情</view>
		<input placeholder="请填写" style="font-size: 33rpx;" value="{{repairInfo.repairDetail}}" bindinput="onChangeRepairDetail"></input>
	</view>
	<view class="cu-form-group">
		<view class="title" style="font-size: 33rpx;font-weight: 700;">报修人</view>
		<input placeholder="请填写" style="font-size: 33rpx;" value="{{repairInfo.userName}}" bindinput="onChangeUserName"></input>
	</view>
	<view class="cu-form-group">
		<view class="title" style="font-size: 33rpx;font-weight: 700;">联系方式</view>
		<input placeholder="请填写" style="font-size: 33rpx;" value="{{repairInfo.phoneNumber}}" bindinput="onChangePhoneNumber"></input>
	</view>
	<view class="cu-form-group">
		<view class="title" style="font-size: 33rpx;font-weight: 700;">上传细节图片</view>


	</view>
	<view style="background-color: white;padding-left: 40rpx;">
		<image src="{{repairInfo.repairPicture}}" style="width: 200rpx;height: 200rpx;border:1rpx solid rgb(216, 214, 214);" bind:tap="chooseImage"></image>
	</view>
</form>
<view>
	<view class="padding flex flex-direction">

		<button class="cu-btn bg-green margin-tb-sm lg" bind:tap="submit">提交</button>
	</view>
</view>

<van-popup show="{{ show }}" bind:close="onClose" custom-style="height: 70%;width:80%;">
	<view>
		<scroll-view scroll-y="true" style="height: 700rpx;">
			<van-cascader title="请选择所在地区" options="{{ optionsAddress }}" field-names="{{ fieldNames }}" bind:finish="onFinishAddress" value="{{cascaderValueAddress}}" wx:if="{{checkContent==='报修地点'}}" />
			<van-cascader title="请选择报修项目" options="{{ optionsEvent }}" field-names="{{ fieldNames }}" bind:finish="onFinishEvent" value="{{cascaderValueEvent}}" wx:if="{{checkContent==='报修项目'}}" />
		</scroll-view>
		<view style="position: absolute;bottom: 20rpx;width: 100%;">
			<view class="grid col-2 padding-sm">
				<view class="margin-tb-sm text-center" wx:for="{{ColorList}}" wx:key>
					<button class="cu-btn round bg-{{item.name}} {{shadow?'shadow':''}}" style="width: 200rpx;" bindtap="onClose">{{item.title}}</button>
				</view>
			</view>
		</view>
	</view>

</van-popup>
<van-popup show="{{ showDate }}" bind:close="onClose" custom-style="height: 70%;width:80%;">
	<van-picker columns="{{ columns }}" bind:change="onChangeDate"></van-picker>
	<view style="position: absolute;bottom: 20rpx;width: 100%;">
		<view class="grid col-2 padding-sm">
			<view class="margin-tb-sm text-center" wx:for="{{ColorList}}" wx:key>
				<button class="cu-btn round bg-{{item.name}} {{shadow?'shadow':''}}" style="width: 200rpx;" bindtap="onCloseDate" data-select="{{index}}">{{item.title}}</button>
			</view>
		</view>
	</view>
</van-popup>