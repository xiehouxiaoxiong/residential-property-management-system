<view style="width: 700rpx;height: 251rpx;background-color: white;border-radius: 20rpx;display: flex;align-items: center;">
<view style="display: flex;justify-content: flex-start;width: 90%;height: 100%;flex-direction: column;">
  <image src="{{repairItem.avatar}}" style="width: 80rpx;height:80rpx;border-radius: 50rpx;margin: 30rpx;" mode="aspectFill"></image>
	<view style="padding-left: 50rpx;font-size: 31rpx;font-weight: 700;margin-top:-10rpx;">{{repairItem.userName}}</view>

</view>
<view style="display: flex;justify-content: center;width: 100%;flex-direction: column;margin-left: -90rpx;">
  <view style="overflow:hidden;text-overflow: ellipsis;white-space: nowrap;width: 300rpx;">{{repairItem.repairDetail}}</view>
  <view style="display: flex;justify-content: center;width: 100%;"><text style="width: 100%;height: 40rpx;">
	地点：{{repairItem.repairAddress}}</text>
  </view>
  <view style="display: flex;justify-content: center;width: 100%;"><text style="height: 40rpx;width: 400rpx;">
	报修时间：{{repairItem.repairDate}}</text>
  </view>

  <view style="display: flex;justify-content: center;width: 100%;"><text style="width: 100%;height: 40rpx;">
	报修项目：{{repairItem.repairEvent}}</text>
  </view>
</view>
<view style="width: 70%;display: flex;font-size: 30rpx;font-weight: 700;margin-top: 0rpx;height: 100%;align-items: center;justify-content: center;">

	<button class="cu-btn round line-blue shadow" wx:if="{{role==='业主'}}">{{repairItem.repairProgress}}</button>
  <button class="cu-btn round line-blue shadow" wx:if="{{role==='员工'&&tabCur===0}}">更新状态</button>
  <button class="cu-btn round line-yellow shadow" wx:if="{{role==='员工'&&tabCur===1&&repairItem.repairProgress==='完工'}}">待评价</button>
  <button class="cu-btn round" wx:if="{{role==='员工'&&tabCur===1&&repairItem.repairProgress==='评价'}}">已评价</button>
</view>
</view>